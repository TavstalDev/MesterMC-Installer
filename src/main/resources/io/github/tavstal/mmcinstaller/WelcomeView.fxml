<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="io.github.tavstal.mmcinstaller.controllers.WelcomeController">
    <!-- Background Image (Left Side) -->
    <ImageView fitHeight="315.0" fitWidth="240.0" pickOnBounds="true"
               StackPane.alignment="TOP_LEFT">
        <Image url="@assets/banner.png"/>
    </ImageView>

    <!-- Main Content Area (GridPane for structured layout) -->
    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="240.0" minWidth="240.0" prefWidth="240.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>

        <!-- Right Side Content -->
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" GridPane.columnIndex="1"
              GridPane.halignment="LEFT" GridPane.hgrow="ALWAYS" GridPane.valignment="TOP" GridPane.vgrow="ALWAYS">
            <padding>
                <Insets left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Label fx:id="welcomeTitle" style="-fx-font-size: 20px; -fx-font-weight: bold;"
                   text="Üdvözöllek a MesterMC Kliens telepítőben!" wrapText="true">
                <padding>
                    <Insets bottom="5.0"/>
                </padding>
            </Label>

            <Text fx:id="welcomeDescription" text="Telepítve lesz a MesterMC Kliens 1.21.5 az ön gépén." wrappingWidth="400.0"/>
            <Text fx:id="welcomeAction" text="Kattintson a Tovább gombra a folytatáshoz, vagy a Megszakítás gombra a kilépéshez."
                  wrappingWidth="400.0"/>
        </VBox>

        <!-- Bottom Section: Buttons -->
        <HBox alignment="BOTTOM_RIGHT" spacing="10.0" GridPane.columnSpan="2" GridPane.halignment="RIGHT"
              GridPane.rowIndex="3" GridPane.valignment="BOTTOM" style="-fx-border-color: #cccccc; -fx-border-width: 1px 0 0 0; -fx-border-insets: 0 0 0 0;">
            <padding>
                <Insets top="15.0" bottom="15.0" left="15.0" right="15.0"/>
            </padding>
            <HBox alignment="BOTTOM_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                <Button fx:id="nextButton" onAction="#onNextButtonClick" mnemonicParsing="false" text="Tovább" />
                <Button fx:id="cancelButton" onAction="#onCancelButtonClick" mnemonicParsing="false" text="Megszakítás"/>
            </HBox>
        </HBox>
    </GridPane>
</StackPane>